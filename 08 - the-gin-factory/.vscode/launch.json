    "version": "0.2.0",
    "configurations": [
    {
        "type": "chrome",
        "request": "attach",
        "name": "Attach to Chrome",
        "port": 5050,
        "webRoot": "${workspaceFolder}"
    },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:5050/public/index.html",
            "webRoot": "${workspaceFolder}/public"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/public/scripts/index.js"
        }
    ]
}